<div class="my-3">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card my-2">
                <a href="/courses/{{this.slug}}" class="text-decoration-none">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}" class="text-decoration-none">
                        <h5 class="card-title text-dark">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-sm btn-primary">Enroll</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>  
</div>
